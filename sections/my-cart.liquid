  {
	"name": "My Cart",
    "settings": [],
    "presets": [
      {
        "name": "My cart"
      }
    ],
    "max_blocks": 25,
    "blocks": [
      {
        "type": "Trigger",
        "name": "Product trigger",
        "settings": [
          {
            "type": "header",
            "content": "Product triggers"
          },
          {
            "type": "product_list",
            "id": "product_list",
            "label": "Product trigger"
          },
          {
            "type": "header",
            "content": "Upsells"
          },
          {
            "type": "checkbox",
            "id": "enable_upsell_1",
            "label": "Enable upsell 1"
          },
          {
            "type": "product",
            "id": "upsell_product_1",
            "label": "Upsell product 1"
          },
          {
            "type": "checkbox",
            "id": "enable_upsell_2",
            "label": "Enable upsell 2"
          },
          {
            "type": "product",
            "id": "upsell_product_2",
            "label": "Upsell product 2"
          },
          {
            "type": "checkbox",
            "id": "enable_upsell_3",
            "label": "Enable upsell 3"
          },
          {
            "type": "product",
            "id": "upsell_product_3",
            "label": "Upsell product 3"
          },
          {
            "type": "checkbox",
            "id": "enable_upsell_4",
            "label": "Enable upsell 4"
          },
          {
            "type": "product",
            "id": "upsell_product_4",
            "label": "Upsell product 4"
          }
        ]
      }
    ]
  }
{% endschema %}