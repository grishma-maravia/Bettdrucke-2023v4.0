<style>
  .image-heading-wrapper{
    max-width: 100%;
    text-align: center;
    background-image: url(https://cdn.shopify.com/s/files/1/0621/3235/5303/files/BETT_Header_image_wedding_lp_desktop.jpg?v=1672751085);
    background-position: center;
    height: 400px;
    position: relative;
  }
  .image-heading-wrapper:before{
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background: rgb(0 0 0 / 4%);
  }
  .image-heading-wrapper .section-header {
    margin-bottom: 0;
    color: #fff;
    position: absolute;
    top: 50%;
    right: 50%;
    transform: translate(50%,-50%);
    z-index: 1;
  }
  .image-heading-wrapper .section-header,
  .image-heading-wrapper .page-title{
    color: #fff;
    margin: 0;
  }
</style>
<section class="image-heading-wrapper">
  <header class="section-header">
    <h1 class="page-title" style="margin-bottom: 5px;">
      {{ section.settings.text_title }}
    </h1>
    <p>{{ section.settings.text_subtitle }}</p>
  </header>
</section>
{% schema %}
  {
    "name": "Image Heading",
    "settings": [
      {
        "type": "text",
        "id": "text_title",
        "label": "Page Title",
        "default": "Title here"
      },
      {
        "type": "text",
        "id": "text_subtitle",
        "label": "Page Subtitle",
        "default": "Subtitle here"
      }
    ],
    "presets": [
    {
      "category": "Page",
      "name": "Image Heading",
      "settings": {}
    }
  ]
  }
{% endschema %}

