.UpsellProd_MainWrapper{
  max-width: 400px;
}
.SuggestedUpProd_ContentWr, .UpProdOpt_ContentWr{
  display: flex;
  border: #ccc 1px solid;
  border-radius: 0 0 3px 3px;
  justify-content: center;
  align-content: center;
}
.UpProdOpt_ContentWr{
  flex-direction: column;
  padding: 20px 10px;
}

.SuggestedUpProd_imageWr{
  max-width: 110px;
}
.SuggestedUpProd_infoWr{
  max-width: 220px;
  display: flex;
  justify-content: center;
  line-height: 1.2;
  padding-left: 5px;
}
.UpsellProd_title{
  font-weight: bold;
  margin: 0;
}

.SuggestedUpProd_Heading, .UpProdOpt_Heading{
  text-align: center;
  background-color: #312783;
  position: relative;
  width: fit-content;
  padding: 10px 10px;
  color: white;
  margin: 0;
  width: 100%;
  border-radius: 3px 3px 0 0;
}

.UpsellProd_title{
  font-size: 18px;
}
h2.UpsellProd_title, .UpsellProd_title:focus, .UpsellProd_title:active, .UpsellProd_title:visited, .UpsellProd_title:target, .UpsellProd_title:visited{
  color: #312783;
}
.SuggestedUpProd_Heading, .UpProdOpt_Heading{
  font-size: 16px;
}

@media only screen and (min-width: 401px){
  .SuggestedUpProd_imageWr{
    max-width: 140px;
  }
  .SuggestedUpProd_ContentWr{
    padding: 13px 11px;
  }
}

@media only screen and (max-width: 400px){
  .UpsellProd_MainWrapper{
    margin-top: 30px;
  }
  .SuggestedUpProd_ContentWr{
    padding: 23px 11px 17px 11px;
  }
}
@media only screen and (min-width: 720px){
  .SuggestedUpProd_buttonWr{
    font-size: var(--font-size-button-small);
  }
}
@media only screen and (max-width: 719px){
  .SuggestedUpProd_buttonWr{
    font-size: var(--font-size-button);
  }
}
.Suggested_Price--highlight{
  color:#ba2e2e
}
.Suggested_Price--compareAt{
  text-decoration: line-through;
  font-family: var(--text-font-family);
  padding-left: 5px;
  font-size: 14px !important;
}
.SuggestedUpPro_variantText{
  margin-bottom: 5px;
  font-size: 14px;
}
.SuggestedUpProd_buttonWr{
  padding: 10px 20px;
  width: fit-content;
  background-color: #009fe3;
  color: {{ settings.color_button_text }};
  letter-spacing: {{ settings.type_button_spacing | divided_by: 100.0 | append: 'em' }};
  font-family: {{ fonts_type_button_family }};
  font-style: {{ fonts_type_button_style }};
  font-weight: {{ fonts_type_button_weight }};
  display: inline-block;
  text-decoration: none;
  cursor: pointer;
  border-radius: 3px;
  transition: width 125ms cubic-bezier(0.4, 0, 0.2, 1), height 125ms cubic-bezier(0.4, 0, 0.2, 1), border-color 125ms cubic-bezier(0.4, 0, 0.2, 1), background-color 125ms cubic-bezier(0.4, 0, 0.2, 1), box-shadow 125ms cubic-bezier(0.4, 0, 0.2, 1);  
  border: none;
  border: 1px solid white;
  margin-top: 5px;
}
.SuggestedUpProd_buttonWr:hover{
  background: rgb(51,178,233);
  border: 1px solid #cecece;
  box-shadow: 0 3px 8px #0000001a;
}
.UpProdOpt_infoWr{
  display: flex;
  flex-direction: column;
}
.upsell_select{
  width: 200px;
  border: 1px solid #a7a2d6;
  border-radius: 3px;
  cursor: pointer;
  background-color: #fff;
  padding: 10px 20px;
}

.upsell_optionWrapper{
  padding: 3px 0;
}

.UpsellProdOpt_ImageUploadButton .cl-po--label{
  display: none !important;
}
.UpProdOpt_selectorsWr{
  padding-top: 10px;
}