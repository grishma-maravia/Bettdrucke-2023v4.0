.kr-privacy-icon, .kr-important-icon{
  position: relative; top: 2px; color: #fe8761;
}
.kr-important-icon{
  left: 3px; padding-right: 6px; font-weight: bold;
}
.kr-privacy-icon{
  font-size: 18px;
}
.cl-po--swatch {
    border-width: 2px!important;
}
.cl-po--option{
  margin-bottom: 10px !important;
}
#clqpzgw9nkgl .cl-po--option{
  margin-bottom: 20px !important;
}
label.cl-po--input.cl-po--upload-button, label.cl-po--label{
  font-family: "Nunito Sans",sans-serif !important;
  font-style: normal !important;
  font-size: 14px !important;
  margin-bottom: 0px !important;
}
label.cl-po--input.cl-po--upload-button {
  padding: 10px 20px !important;
  width: fit-content !important;
  background-color: #a1daf8 !important;
  color: #312783 !important;
  letter-spacing: 0em !important;
  font-weight: normal !important;
  display: inline-block;
  text-decoration: none;
  cursor: pointer;
  border-radius: 3px !important;
  transition: width 125ms cubic-bezier(.4,0,.2,1),height 125ms cubic-bezier(.4,0,.2,1),border-color 125ms cubic-bezier(.4,0,.2,1),background-color 125ms cubic-bezier(.4,0,.2,1),box-shadow 125ms cubic-bezier(.4,0,.2,1);
  border: none;
  border: 1px solid #312783 !important;
  line-height: 16.9833px !important;
}
label.cl-po--label{
  font-weight: 700 !important;
  color: rgb(29, 29, 29) !important;
  margin-bottom: 12px !important;
}
.UpsellProdOpt_ImageUploadButton label.cl-po--input.cl-po--upload-button {
  padding: 8px 15px !important;
}

.cl-po--upload-button span{
  position: relative;
}
.cl-po--upload-button span:before{
  content: "\e921";
  font-family: 'icomoon' !important;
  padding-right: 4px;
  vertical-align: top;
}
@media screen and (max-width: 640px){
  label.cl-po--input.cl-po--upload-button{
    padding: .5rem 1rem !important;
  }
}