.kr-privacy-icon, .kr-important-icon{
  position: relative; top: 2px; color: #fe8761;
}
.kr-important-icon{
  left: 3px; padding-right: 6px; font-weight: bold;
}
.kr-privacy-icon{
  font-size: 18px;
}
.cl-po--swatch {
    border-width: 2px!important;
}
.cl-po--option{
  margin-bottom: 10px !important;
}
#clqpzgw9nkgl .cl-po--option{
  margin-bottom: 20px !important;
}
label.cl-po--input.cl-po--upload-button > span {
  font-family: {{ fonts_type_body_family }} !important;
  font-style: {{ fonts_type_body_style }} !important;
  font-weight: {{ fonts_type_body_weight }} !important;
  font-size: var(--font-size-body) !important; 
  z-index: 1 !important;
  width: 100% !important;
  padding: 1.5rem 0.625rem 0.375rem !important;
  color: {{ settings.color_input_text }} !important;
  background-color: {{ settings.color_input_background }} !important;
  border: 1px solid {{ settings.color_input_border }} !important;
  border-radius: 3px !important;
}