{% if settings.left_product_inventory %}

  {% style %}
    .left_inventory{
      color: #ba2e2e;
      letter-spacing: .1em;
      font-size: 11px;
      text-align: left;
      padding-top: 0;
      margin-top: 0;}
  {% endstyle %}

  {% if selected_variant.available == true %}
      {% assign total=0 %}
      {% for variant in product.variants %}
          {% capture i %}
			{{ total | plus:variant.inventory_quantity }}
		  {% endcapture %}
          {% assign total = i %}
      {% endfor %}
	  {% assign t = total | plus: 0 %}
	  {% if t > 0 and t <= 30 %}
        <p class="left_inventory">Nur noch {{ total }} Stück übrig!</p>
        <input id="product-total-inventory-quantity" style="display:none" name="properties[total_inventory_quantity]" value="{{total}}" />
	  {% endif %}
  {% endif %}
  
{% endif %}